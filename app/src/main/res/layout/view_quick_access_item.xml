<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              android:clipToPadding="false"
              android:background="?selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/quickAccessFaviconCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:cardBackgroundColor="?attr/daxColorBackground"
        app:cardCornerRadius="@dimen/smallShapeCornerRadius"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/quickAccessFavicon"
            android:layout_width="@dimen/savedSiteGridItemFavicon"
            android:layout_height="@dimen/savedSiteGridItemFavicon"
            android:importantForAccessibility="no"/>

    </com.google.android.material.card.MaterialCardView>

    <com.duckduckgo.common.ui.view.text.DaxTextView
        android:id="@+id/quickAccessTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typography="caption"
        app:textType="secondary"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:paddingTop="8dp"
        tools:text="Super long favorite title"/>

</LinearLayout>