<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.duckduckgo.newtabpage.impl.shortcuts.ShortcutSectionItemView
        android:id="@+id/shortcutItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shortcutSelected"
        android:layout_width="@dimen/shortcutStateSize"
        android:layout_height="@dimen/shortcutStateSize"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/background_shortcut_unselected"
        android:elevation="2dp"
        android:scaleType="center"
        android:src="@drawable/ic_shortcut_unselected"
        app:layout_constraintEnd_toEndOf="@id/shortcutItem"
        app:layout_constraintTop_toTopOf="@id/shortcutItem" />


</androidx.constraintlayout.widget.ConstraintLayout>
