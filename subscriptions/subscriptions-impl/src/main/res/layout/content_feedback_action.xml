<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.duckduckgo.common.ui.view.listitem.SectionHeaderListItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:primaryText="@string/feedbackActionHeader" />

        <com.duckduckgo.common.ui.view.listitem.OneLineListItem
            android:id="@+id/reportProblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryText="@string/feedbackActionReportIssue" />

        <com.duckduckgo.common.ui.view.listitem.OneLineListItem
            android:id="@+id/requestFeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryText="@string/feedbackActionFeatureRequest" />

        <com.duckduckgo.common.ui.view.listitem.OneLineListItem
            android:id="@+id/generalFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryText="@string/feedbackActionGeneralFeedback" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>