<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/tracker_company_badge_icon"
        android:layout_width="@dimen/keyline_5"
        android:layout_height="@dimen/keyline_5"
        android:visibility="gone" />

    <com.duckduckgo.common.ui.view.text.DaxTextView
        android:id="@+id/tracker_company_badge_text"
        android:layout_width="@dimen/keyline_5"
        android:layout_height="@dimen/keyline_5"
        android:background="@drawable/background_tracker_badge"
        android:gravity="center"
        app:typography="h5" />

    <com.duckduckgo.common.ui.view.text.DaxTextView
        android:id="@+id/tracker_company_large_badge_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/keyline_5"
        android:background="@drawable/background_radius_text"
        android:gravity="center"
        android:minWidth="@dimen/keyline_5"
        app:typography="h5" />

</FrameLayout>

