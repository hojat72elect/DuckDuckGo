<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tracker_entry_skeleton_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp">

    <com.duckduckgo.common.ui.view.SkeletonView
        android:id="@+id/excluded_app_entry_skeleton_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.duckduckgo.common.ui.view.SkeletonView
        android:id="@+id/excluded_app_entry_skeleton_top_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/excluded_app_entry_skeleton_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <com.duckduckgo.common.ui.view.SkeletonView
        android:id="@+id/excluded_app_entry_skeleton_bottom_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/excluded_app_entry_skeleton_imageView"
        app:layout_constraintTop_toBottomOf="@+id/excluded_app_entry_skeleton_top_text" />

</androidx.constraintlayout.widget.ConstraintLayout>

