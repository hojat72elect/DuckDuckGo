<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="@dimen/keyline_2"
    android:paddingEnd="@dimen/keyline_4"
    android:paddingBottom="@dimen/keyline_2">

    <RadioButton
        android:id="@+id/deviceShieldInstalledAppSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/deviceShieldInstalledAppEntryIcon"
        android:layout_width="@dimen/listItemImageContainerSize"
        android:layout_height="@dimen/listItemImageContainerSize"
        android:layout_marginTop="@dimen/keyline_2"
        android:layout_marginBottom="@dimen/keyline_2"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_globe_gray_16dp" />

    <com.duckduckgo.common.ui.view.text.DaxTextView
        android:id="@+id/deviceShieldInstalledAppEntryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginEnd="@dimen/keyline_2"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:orientation="vertical"
        android:singleLine="true"
        app:typography="body1"
        tools:text="Facebook" />

</LinearLayout>