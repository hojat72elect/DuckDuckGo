<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="DaxTextView">
        <attr name="typography" format="enum">
            <enum name="title" value="0" />
            <enum name="h1" value="1" />
            <enum name="h2" value="2" />
            <enum name="h3" value="3" />
            <enum name="h4" value="4" />
            <enum name="h5" value="5" />
            <enum name="body1" value="6" />
            <enum name="body1_bold" value="7" />
            <enum name="body1_mono" value="8" />
            <enum name="body2" value="9" />
            <enum name="body2_bold" value="10" />
            <enum name="button" value="11" />
            <enum name="caption" value="12" />
            <enum name="caption_allCaps" value="13" />
        </attr>
        <attr name="textType" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
        </attr>
        <attr name="android:textColor" format="color" />
    </declare-styleable>

    <!-- Attributes for all Design System Text Appearances -->
    <attr name="textAppearanceTitle" format="reference" />
    <attr name="textAppearanceH1" format="reference" />
    <attr name="textAppearanceH2" format="reference" />
    <attr name="textAppearanceH3" format="reference" />
    <attr name="textAppearanceH4" format="reference" />
    <attr name="textAppearanceH5" format="reference" />

</resources>