<?xml version="1.0" encoding="utf-8"?>

<resources>
    <attr name="checkListItemStyle" format="reference"/>
    <attr name="itemState">
        <!-- Grey icon. -->
        <enum name="disabled" value="0" />
        <!-- Green icon. -->
        <enum name="enabled" value="1" />
        <!-- Yellow exclamation icon. -->
        <enum name="warning" value="2" />
        <!-- Red exclamation icon. -->
        <enum name="alert" value="3" />
    </attr>

    <!-- Check List Item view-->
    <declare-styleable name="CheckListItem">
        <attr name="primaryText"/>
        <attr name="primaryTextColorOverlay"/>
        <attr name="primaryTextTruncated"/>
        <attr name="secondaryText"/>
        <attr name="secondaryTextColorOverlay"/>
        <attr name="showBetaPill"/>
        <attr name="itemState"/>
    </declare-styleable>

</resources>
