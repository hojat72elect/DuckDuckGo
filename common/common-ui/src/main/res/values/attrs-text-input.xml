<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="DaxTextInput">
        <attr name="android:hint" />
        <attr name="android:text" />
        <attr name="android:minLines" />
        <attr name="capitalizeKeyboard" format="boolean" />
        <attr name="clickable" format="boolean" />
        <attr name="editable" format="boolean" />
        <attr name="endIcon" format="reference" />
        <attr name="endIconContentDescription" format="string" />
        <attr name="singleLineTextTruncated" format="boolean"/>

        <attr name="type" format="enum" >
            <enum name="multi_line" value="0"/>
            <enum name="single_line" value="1"/>
            <enum name="password" value="2"/>
            <enum name="form_mode" value="3"/>
            <enum name="ip_address" value="4"/>
        </attr>

    </declare-styleable>


</resources>